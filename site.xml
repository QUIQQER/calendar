<?xml version="1.0" encoding="UTF-8"?>
<site>
    <types>
        <!-- Calendar Full Page -->
        <type type="sitetypes/calendar" icon="fa fa-calendar" template="sitetypes/calendar.html">
            <locale group="quiqqer/calendar" var="admin.types.calendar.title"/>

            <desc>
                <locale group="quiqqer/calendar" var="admin.types.calendar.desc"/>
            </desc>

            <attributes>
                <attribute>calendar.settings.ids</attribute>
            </attributes>

            <settings>
                <category name="calendar-fullpage-settings">
                    <settings>
                        <title>
                            <locale group="quiqqer/calendar" var="calendar.settings.title"/>
                        </title>

                        <input conf="calendar.settings.ids" type="text">
                            <text>
                                <locale group="quiqqer/calendar" var="quiqqer.settings.calendar.ids"/>
                            </text>
                        </input>
                    </settings>
                </category>
            </settings>

        </type>

        <!-- Calendar Edit Full Page -->
        <type type="sitetypes/calendarEdit" icon="fa fa-calendar" template="sitetypes/calendarEdit.html">
            <locale group="quiqqer/calendar" var="admin.types.calendarEdit.title"/>

            <desc>
                <locale group="quiqqer/calendar" var="admin.types.calendarEdit.desc"/>
            </desc>

            <attributes>
                <attribute>calendarEdit.settings.id</attribute>
            </attributes>

            <settings>
                <category name="calendar-edit-settings">
                    <settings>
                        <title>
                            <locale group="quiqqer/calendar" var="calendarEdit.settings.title"/>
                        </title>

                        <input conf="calendarEdit.settings.id" type="number">
                            <text>
                                <locale group="quiqqer/calendar" var="quiqqer.settings.calendarEdit.id"/>
                            </text>
                        </input>
                    </settings>
                </category>
            </settings>

        </type>
    </types>
</site>